<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.studio.pogworld.dropdream.LoginActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:rowCount="4"
            android:padding="20dp"
            android:columnCount="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true">

            <ImageView
                android:id="@+id/iv1"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/butterfly"/>
            <ImageView
                android:id="@+id/iv2"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/bumblebee"/>
            <ImageView
                android:id="@+id/iv3"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/deer"/>
            <ImageView
                android:id="@+id/iv4"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/dinosaur"/>
            <ImageView
                android:id="@+id/iv5"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/crab"/>
            <ImageView
                android:id="@+id/iv6"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cow"/>
            <ImageView
                android:id="@+id/iv7"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cat"/>
            <ImageView
                android:id="@+id/iv8"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/cat_footprint"/>
            <ImageView
                android:id="@+id/iv9"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/caterpillar"/>
            <ImageView
                android:id="@+id/iv10"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/chicken"/>
            <ImageView
                android:id="@+id/iv11"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/dog_bowl"/>
            <ImageView
                android:id="@+id/iv12"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/dog_footprint"/>
            <ImageView
                android:id="@+id/iv13"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/dog_house"/>
            <ImageView
                android:id="@+id/iv14"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/clown_fish"/>
            <ImageView
                android:id="@+id/iv15"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/corgi"/>
            <ImageView
                android:id="@+id/iv16"
                android:clickable="true"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/coral"/>

        </GridLayout>
    </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="continue"
            android:id="@+id/btnCreate" />
        <TextView
            android:id="@+id/somenote"
            android:text="@string/notetocreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            android:id="@+id/imageremind"
            android:text="@string/imageremind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <GridView
                    android:rowCount="4"
                    android:columnCount="4"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/glShow">

                </GridView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/options"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_weight="1"
                        android:text="try again"
                        android:id="@+id/tryagain"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <Button
                        android:layout_weight="1"
                        android:text="confirm"
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

</LinearLayout>
